{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "esnext",
    "target": "ES2019",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "pages", "api", "tests"],
  "exclude": ["node_modules"]
}
